             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:oVersion"
             mc:Ignorable="d"  >
    <DockPanel>
        <Button Width="20" Height="20" Content="x" DockPanel.Dock="Right" Grid.Column="1"  VerticalAlignment="Center" Margin="5" x:Name="chk"/>
